{
  "extends": ["standard", "airbnb-base", "prettier"],
  "plugins": [
    "prettier",
    "node"
  ],
  "rules": {
    "global-require": "warn",
    "import/no-unresolved": "warn",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "semi": false,
        "singleQuote": true
      }
    ]
  },
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["bin"],
        "extensions": [".js"]
      }
    }
  }
}
